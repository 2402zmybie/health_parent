<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hr.dao.CheckItemDao">
    <select id="add" parameterType="com.hr.pojo.CheckItem">
        insert into t_checkitem(code,name,sex,age,price,type,remark,attention)
            values
            (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </select>

    <select id="findPage" parameterType="String" resultType="com.hr.pojo.CheckItem">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where code = #{queryString} or name = #{queryString}
        </if>
    </select>

    <select id="findCountByCheckItemid" parameterType="int" resultType="long">
        select count(1) from t_checkgroup_checkitem where checkitem_id=#{id}
    </select>

    <delete id="deleteById" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>
</mapper>