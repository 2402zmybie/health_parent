<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hr.dao.OrderSettingDao">
    <!--新增-->
    <insert id="add" parameterType="com.hr.pojo.OrderSetting">
       insert into t_ordersetting
        (orderDate,number,reservations)
            values
        (#{orderDate},#{number},#{reservations})
    </insert>

    <!--根据日期更新预约人数-->
    <update id="editNumberByOrderDate" parameterType="com.hr.pojo.OrderSetting">
        update t_ordersetting set number = #{number}
        where
        orderDate = #{orderDate}
    </update>

    <!--根据日期是否有该条数据-->
    <select id="findCountByOrderDate" parameterType="java.util.Date" resultType="long">
        select count(id) from t_ordersetting where orderDate = #{orderDate}
    </select>

    <select id="getOrderSettingByMonth" parameterType="map" resultType="com.hr.pojo.OrderSetting">
        select * from t_ordersetting
        where
        orderDate between #{begin} and #{end}
    </select>

</mapper>